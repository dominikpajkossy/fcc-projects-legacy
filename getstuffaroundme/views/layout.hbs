<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css"
          integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    {{#if user.username}}
        <a class="navbar-brand" href="/twitter/logout">Hello {{user.username}}!</a>
    {{else}}
        <a class="navbar-brand" href="/twitter/login">Login using Twitter</a>
    {{/if}}

    <div id="formcontainer">
        <form method="post" class="form-inline my-2 my-lg-0">
            <select name="placeType" class="selectpicker">
                <option value="restaurants">Restaurants</option>
                <option value="nightclubs">Nightclubs</option>
                <option value="casinos">Casinos</option>
                <option value="gyms">Gyms</option>
                <option value="banks">Banks</option>
                <option value="pharmacies">Pharmacies</option>
            </select>
            <div id="incontainer">in</div>
            <input name="inputField" class="form-control mr-sm-2" type="text" placeholder="Enter your location"
                   aria-label="Search">
            <button id="inputButton" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>

{{{body}}}

<script src="../javascripts/input.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
        integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"
        integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1"
        crossorigin="anonymous"></script>
<script
        src="https://code.jquery.com/jquery-2.2.4.min.js"
        integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
        crossorigin="anonymous"></script>
<script>
    function buttonclicked(element){
        console.log(element.id);
        $.get(window.location.href + "postgoing/" + element.id , function(data, status){
            console.log(data);
            console.log("Succesful post");
            document.getElementById(element.id).innerHTML = "Going" + data;
        });

    }
</script>

</body>
</html>
