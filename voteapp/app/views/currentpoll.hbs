<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="public/js/chart.js"></script>

<div>

  <h1 style="text-align: center">{{poll.pollname}}</h1>
  <br>

  <form method="post">
    <select name="voteoptions">
          {{#each poll.voteoptionnames}}
        <option value={{this.name}}>{{this.name}}</option>
          {{/each}}
      </select>
    <button type="submit">Vote</button>
  </form>

  <form method="post">
    <input type="text" placeholder="Enter vote option to add" name="votename">
    <button type="submit">Create</button>
  </form>

  <div id="chart_div"></div>


</div>
